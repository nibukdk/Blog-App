<% include partials/header.ejs %>
<div class="container section">
        <div class="row">
            
            <form class="col s12 l10 #eceff1 blue-grey lighten-5 z-depth-1" action="/blogs" method="POST">
                <h4 class="#00897b teal-text darken-1 center-align">New Blog</h4>
                <div class="row">
                     <div class="input-field col s10 l10 ">
                            <input type="text" id="image"  name="blog[title]" placeholder="Title">
                           <label for="title">Title</label>
                    </div>
                     <div class="input-field col s10 l10 ">
                        <input type="text" name="blog[image]" id="image" placeholder="Image source">
                         <label for="image">Image</label>
                    </div>
                     <div class="input-field col s12 l10 ">
                         <textarea class="materialize-textarea block" id="body" name="blog[body]" placeholder="Write About....."></textarea>
                        <label for="body">Write Something About Post</label>    
                    </div>
                    <button class="btn waves-effect waves-light hoverable col s3 offset-s4 " type="submit" name="action">Submit
                         <i class="material-icons right">send</i>
                    </button>
                </div>
            </form> 
        </div>    
</div>

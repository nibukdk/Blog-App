<% include partials/header.ejs %>
    <div class="row">
        <div class="col s2 m2 l2 section"></div>
         <div class="col s8 m8 l8 section">
            <% blogs.forEach(function(blog){ %>
                <div class="card z-depth-1 hoverable #263238 blue-grey darken-4">
                   <h2><span class="card-title white-text"><%= blog.title %></span></h2>
                    <div class="card-image responsive-img ">
                         <img  src="<%= blog.image %>">
                    </div>
                    <div class="card-content white-text">
                        <p class="truncate "><%= blog.body %></p>
                        <span class="right"><%= blog.created.toDateString() %></span>

                    </div>
                    <div class="card-action center-align">
                      <a href="/blogs/<%= blog._id %>">Read</a>
                    </div>
                </div>
                <% }) %>
        </div>
        <div class="col s2 m2 l2 section"></div>
    </div>
<% include partials/footer.ejs %>
